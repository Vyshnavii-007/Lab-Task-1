#include<stdio.h>
#include<ctype.h>

int main(){
  char str[100];
  char *ptr;
  int vow=0,con=0;
  char ch;
  printf("Enter a String: \n");
  fgets(str,sizeof(str),stdin);

  ptr = str;
  while(*ptr!='\0'){ 
    if(*ptr=='\n'){
      *ptr='\0';
      break;
    }
    ptr++;
  }
  ptr = str;
  while(*ptr!='\0'){
        char ch = tolower(*ptr);
        if(ch>='a'&&ch<='z'){
            if(ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u'){
                vow++;
            }else{
                con++;
            }
        }ptr++;
    }

  printf("Number of vowels: %d\n",vow);
  printf("Number of consonants : %d\n",con);

  return 0;
}
